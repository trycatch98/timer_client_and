<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.twomin.timerclient.ui.timeset.create.CreateTimeSetViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground3">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/nav_bottom_guide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/navHeight" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/nav_bottom_guide"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextHeader"
            android:text="@string/create_time_set_title"
            android:layout_marginBottom="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/nav_bottom_guide"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLine2"
            app:layout_constraintBottom_toBottomOf="@id/nav_bottom_guide"/>

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextTitle"
            android:layout_marginTop="@dimen/navMargin"
            android:layout_marginStart="33dp"
            android:text="99시간 99분 99초"
            app:layout_constraintTop_toBottomOf="@id/nav_bottom_guide"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextSubInfo"
            android:textSize="12sp"
            android:text="@{vm.endTime}"
            app:layout_constraintTop_toBottomOf="@id/total_time"
            app:layout_constraintStart_toStartOf="@id/total_time"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm_sound"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/total_time"
            app:layout_constraintEnd_toStartOf="@id/repeat"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_repeat_x"
            android:layout_marginEnd="22dp"
            app:layout_constraintTop_toTopOf="@id/sound"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/timer_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:layout_constraintTop_toBottomOf="@id/end_time"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>